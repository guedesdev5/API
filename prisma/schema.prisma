generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// Categorias
model Categorias {
  id        Int        @id @map("_id")
  nome      String     @unique
  descricao String?
  Produtos  Produtos[]
}

// Vendedores
model Vendedores {
  id        Int    @id @map("_id")
  nome      String
  username  String @unique
  email     String
  senha     String
  permissao Int
}

// Fornecedores
model Fornecedores {
  id       Int        @id @map("_id")
  nome     String
  telefone String?
  email    String?
  endereco String?
  Produtos Produtos[]
}

// Produtos
model Produtos {
  id         Int           @id @map("_id")
  nome       String
  descricao  String?
  preco      Float?
  quantidade Int
  categoria  Categorias?   @relation(fields: [id_categoria], references: [id])
  fornecedor Fornecedores? @relation(fields: [id_fornecedor], references: [id])

  id_categoria  Int?
  id_fornecedor Int?
}
